<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <parameters>
        <parameter key="zenstruck_form.datepicker_type.class">Zenstruck\Bundle\FormBundle\Form\Type\DatePickerType</parameter>
        <parameter key="zenstruck_form.datetimepicker_type.class">Zenstruck\Bundle\FormBundle\Form\Type\DateTimePickerType</parameter>
    </parameters>

    <services>
        <service id="zenstruck_form.datepicker_type" class="%zenstruck_form.datepicker_type.class%">
            <tag name="form.type" alias="zenstruck_datepicker" />
        </service>
        <service id="zenstruck_form.datetimepicker_type" class="%zenstruck_form.datetimepicker_type.class%">
            <tag name="form.type" alias="zenstruck_datetimepicker" />
        </service>
    </services>
</container>